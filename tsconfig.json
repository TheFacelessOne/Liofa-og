{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"declaration": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
